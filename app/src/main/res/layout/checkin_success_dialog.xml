<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <FrameLayout

        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/layout_bg"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
           android:paddingTop="40dp"
            android:id="@+id/TextviewTitleSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="@string/success_checkin"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--<TextView-->
            <!--android:id="@+id/TextViewName"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginTop="55dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:gravity="center"-->
            <!--android:text="Truong Quoc Quan \n T161552@gmail.com"-->
            <!--android:textSize="16sp" />-->

        <Button
            android:id="@+id/ButtonOkCheckinSuccess"
            android:layout_marginTop="110dp"
            android:textColor="@color/white"
            android:background="#4FB97D"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/ok"
            android:layout_gravity="center_horizontal"/>
    </FrameLayout>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/success_icon"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout" />



</androidx.constraintlayout.widget.ConstraintLayout>
